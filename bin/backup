#!/usr/bin/env bash
# Backup Script
#
# Example usage:
# docker run --rm --name backup --hostname backup -v /opt/vpm/puppet:/vpm --volumes-from puppet_data_1 vladgh/awscli:latest /vpm/bin/backup

# Load environment
# shellcheck disable=1090
. "$(cd "$(dirname "${BASH_SOURCE[0]}")/../" && pwd -P)/envrc"

# Backup Puppet SSL Directory
backup_directory '/etc/puppetlabs/puppet/ssl' "$S3_SSL_BACKUP"
