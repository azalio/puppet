#!/usr/bin/env bash

# Redirect stdout/stderr to a file
exec &> /tmp/r10k_post_run.log

# Bash strict mode
set -euo pipefail
IFS=$'\n\t'

# VARs
BUCKET=vladgh
PREFIX=hieradata
ENV_PATH=$(/opt/puppetlabs/bin/puppet config print environmentpath)
AZ=$(curl -s http://169.254.169.254/latest/meta-data/placement/availability-zone)
REGION="${AZ%?}"

# Download Private Hieradata
for envdir in ${ENV_PATH}/*; do
  [[ -d $envdir ]] || break
  envname=$(basename "$envdir")
  echo "Synchronize s3://${BUCKET}/${PREFIX}/${envname} -> ${envdir}/hieradata/"
  /usr/local/bin/aws --region "$REGION" s3 sync --delete \
    "s3://${BUCKET}/${PREFIX}/${envname}/" \
    "${envdir}/hieradata/" || break
done
