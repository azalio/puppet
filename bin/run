#!/usr/bin/env bash
# GIT Pre-Push Hook
# @author Vlad Ghinea

#VARs
ENVNAME="${1:-dev}"

# Load environment
# shellcheck disable=1090
. "$(cd "$(dirname "${BASH_SOURCE[0]}")/../" && pwd -P)/envrc"

# Run docker compose
e_header "Running Docker Compose (${ENVNAME})"
docker-compose -f "${APPDIR}/docker-compose.${ENVNAME}.yml" up -d
