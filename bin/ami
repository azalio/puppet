#!/usr/bin/env bash
# AWS EC2 image tasks

# Load environment
# shellcheck disable=1090
. "$(cd "$(dirname "${BASH_SOURCE[0]}")/../" && pwd -P)/env.sh"

# Process arguments
case "${1:-}" in
  create)
    create_ami
    ;;
  purge)
    vgs_aws_ec2_images_purge "${AWS_EC2_IMAGE_PREFIX}_*"
    ;;
  *)
    e_abort "USAGE: ${BASH_SOURCE[0]} [create | purge]"
    ;;
esac
